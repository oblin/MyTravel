@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>My Travel @ViewBag.Title</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="css/site.css" />
</head>
<body>
    <div id="sidebar">
        <img src="img/hebe.png" alt="Hebe headshot" class="headshot" />
        <span id="username">Hebe Tien</span>
        <ul class="menu">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button type="button" id="sidebarToggle">Toggle Menu</button>
            </div>
            <h3>The World</h3>
            <p>This will be a fun website soon!</p>

            <form>
                <div>
                    <label>Date</label>
                    <input type="" value="" />
                </div>
                <div>
                    <label>Location</label>
                    <input type="" value="" />
                </div>
                <input type="submit" value="Add Location" />
            </form>
        </div>
        <div id="footer">
            &copy; 2016 The Traveling Co.
        </div>        
    </div>
    <script type="text/javascript" src="lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="js/site.js"></script>
</body>
</html>